
<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= form_for(task) do |f| %>
        <%= f.check_box :completed, :disabled => true %>
        <%= link_to task.title, task_path(task) %> -
        <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Create a new Task', new_task_path %></p>
